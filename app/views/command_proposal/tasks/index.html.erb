<table>
  <thead>
    <th>Name</th>
    <th>Desc</th>
    <th>Last Run</th>
    <th>Run by</th>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name.presence || "Task #{task.id}", task_path(task) %></td>
        <td><%= task.description %></td>
        <td><%= task.current_iteration_at&.strftime("%b %-d, %y %H:%M").presence || "N/A" %></td>
        <td><%= task.current_iteration_by.presence || "N/A" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
