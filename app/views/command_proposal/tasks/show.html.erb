<div class="command"><%= @task.code %></div>
<% if @iteration.present? %>
  <br>
  <div class="command"><%= @iteration.result %></div>
<% end %>

<br>
<div class="terminal">
  <div class="line">sup</div>
  <div contenteditable="true" class="line" name="name" rows="1"></div>
</div>

