<%= link_to "Edit", edit_task_path(@task) %>
<h3><%= @task.name %></h3>
<p><%= @task.description %></p>
<div class="command"><%= @task.code %></div>
<% if @iteration.present? %>
  <br>
  <div class="command"><%= @iteration.result %></div>
<% end %>

<br>
<div class="terminal" data-task="<%= @task.id %>" data-exe-url="<%= iterations_path %>">
  <div class="lines"></div>
  <div contenteditable="true" autofocus=true class="line input">  </div>
</div>

<%= link_to "Run", iteration_path(@task.current_iteration), class: "btn", method: :patch %>

